---
import Layout from "../layouts/Main.astro";
import Nav from "../components/Nav.astro";
import Button from "../components/Button.astro";
import Banner from "../components/Banner.astro";
import Feature from "../components/Feature.astro";
---

<Layout title="Velocity">
    <Nav expanded={false} />
    <div class="hero">
        <div class="hero-backdrop">
            <Banner type="info" title="End of Life" content="Velocity version 1.x.x is now deprecated. For more information, join the official Discord Server." />
            <div class="hero-content">
                <div class="quote"></div>
                <div class="title">Supercharge your Discord today.</div>
                <div class="subtitle">Velocity adds the ability to customise your favourite chat app however <strong>you</strong> want.</div>
                <div class="buttons">
                    <Button label="Install â†’" size="large" href="/docs/installation" />
                    <Button label="Addons" color="outline" size="large" href="/store" />
                </div>
            </div>
            <!-- <div class="downloads">Over <div class="highlight">{getDownloadCount()}+</div> Recent Installer Downloads</div> -->
        </div>
    </div>
    <main>
        <Feature
            code={`const { WebpackModules, Notifications } = Velocity;\n\nconst { Components, React } = WebpackModules.common;\n\nconst ButtonModules = Components.ButtonModules;\n\nReact.createElement(ButtonModules.default, {\n    children: "Click me!",\n    color: ButtonModules.ButtonColors.GREEN,\n    onClick: () => Notifications.showToast("Clicked!")\n})`}
            lang="js"
            decoration="Extendable"
            title="Plugins"
            content="Plugins can make use of Discord's internal methods and Velocity's provided utilities to create advanced and creative Plugins."
        />
        <Feature
            code={`.something {\n    display: none; /* :( */\n}\n\n.something::after {\n    display: flex;\n    content: "";\n    /* make stuff better */\n}`}
            lang="css"
            decoration="Customisable"
            title="Themes"
            content="Themes allow you to re-imagine Discord's look and feel, either by creating your own with CSS or by downloading one of the numerous public themes."
        />
    </main>
</Layout>

<style>
    .hero {
        position: relative;
        height: 100vh;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 15px;
    }

    .hero-backdrop {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        position: relative;
    }

    .hero-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding-inline: 5em;
        position: relative;
        width: 80%;
        margin-top: 7%;
        margin-bottom: 7%;
    }

    .quote {
        background-color: var(--border-floating);
        border-radius: 50px;
        height: 100%;
        width: 5px;
        position: absolute;
        left: 50px;
    }

    .title {
        font-size: 64px;
        font-weight: 550;
        color: var(--color-primary);
    }

    .subtitle {
        font-size: 35px;
        font-weight: 450;
        color: var(--color-secondary);
        margin-top: 30px;
        width: 80%;
    }

    strong {
        color: var(--color-primary);
    }

    .buttons {
        display: flex;
        flex-direction: row;
        gap: 1em;
        margin-top: 70px;
    }

    .downloads {
        position: relative;
        margin-top: auto;
        display: flex;
        width: 100%;
        font-size: 16px;
        font-weight: 400;
        align-content: center;
        justify-content: center;
        gap: 5px;
        bottom: 15px;
    }

    .highlight {
        color: var(--brand);
    }

    @media (max-width: 1010px) {
        .title {
            font-size: 48px;
        }

        .subtitle {
            font-size: 24px;
            margin-top: 20px;
        }
    }

    @media (max-width: 768px) {
        .hero-content {
            padding-inline: 2em;
            margin-top: 10%;
            width: 100%;
        }

        .title {
            font-size: 36px;
        }

        .subtitle {
            font-size: 20px;
            margin-top: 16px;
        }

        .buttons {
            flex-direction: column;
            gap: 0.5em;
        }

        .hero-backdrop {
            align-items: center;
        }

        .quote {
            display: none;
        }
    }

    @media (max-width: 480px) {
        .hero-backdrop {
            align-items: center;
        }

        .hero-content {
            padding-inline: 1em;
            margin-top: 5%;
        }

        .title {
            font-size: 28px;
        }

        .subtitle {
            font-size: 16px;
            margin-top: 12px;
        }

        .buttons {
            flex-direction: column;
            gap: 0.5em;
        }

        .quote {
            display: none;
        }
    }
</style>
