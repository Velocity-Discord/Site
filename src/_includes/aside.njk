<aside>
    <div class="background">
        <div class="header">
            <div class="name">
                <h1>Velocity</h1>
                Docs
            </div>
            <button class="look-empty external" onClick="location.href = '/'">
                Home
                <div class="arrow">â†’</div>
            </button>
            <div class="divider"></div>
        </div>
        <ul>
            {%- for header in collections.docheaders|sort(false, true, 'data.index')-%}

            <ul class="doc-collection">
                <li class="doc-header">{{header.data.title}}</li>

                {%- for post in collections.post|sort(false, true, 'data.index') -%}

                {%- if post.data.group == header.data.title -%}

                <li {% if post.url == page.url %}class="selected"{% endif %} ><a href="{{ post.url }}">{{ post.data.title }}</a></li>

                {%- endif -%}

                {%- endfor -%}
            </ul>
            
            {%- endfor -%}

            {# <li><a href="/docs">Intro</a></li> #}
        </ul>
    </div>
</aside>