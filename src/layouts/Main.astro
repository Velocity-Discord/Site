---
import Footer from "../components/Footer.astro";

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <meta name="description" content="Velocity is a Discord Client modification that allows you to extend discord's functionality and capabilities however you want." />
        <meta name="og:description" content="Velocity is a Discord Client modification that allows you to extend discord's functionality and capabilities however you want." />
        <meta property="og:title" content="Velocity" />
        <meta property="og:type" content="website" />
        <meta name="theme-color" content="#5b88fc" />
        <meta property="og:image" content="https://velocity-discord.netlify.app/assets/logos/Blue.svg" />
    </head>
    <body>
        <slot />
        <Footer />
        <style>
            :root {
                --background-primary: #111112;
                --background-floating: #ffffff0d;

                --border-floating: #ffffff1a;

                --color-primary: #ffffff;
                --color-text-secondary: #e0e0e0;
                --color-text-tertiary: #d4d4d4;
                --color-secondary: #b0b0b0;

                --brand: #5b88fc;
                --brand-dark: #5f70ff;
                --brand-transparent: #5b88fc26;

                --danger: #d46060;

                --btn-brand-bg: #5f70ff;
                --btn-brand-bg-hover: #5060f1;
                --btn-brand-color: #fff;

                --btn-danger-bg: #d46060;
                --btn-danger-bg-hover: #c44f4f;
                --btn-danger-color: #fff;
            }

            html {
                color: var(--color-primary);
                background-color: var(--background-primary);
            }
        </style>

        <style is:global>
            @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap");
            @import url("https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&display=swap");

            * {
                box-sizing: border-box;
                margin: 0;
                padding: 0;
                border: 0;
            }

            html {
                color: var(--color-primary);
                background-color: var(--background-primary);
                font-family: "Inter", system-ui, sans-serif;
            }

            body {
                display: flex;
                flex-direction: column;
                height: 100vh;
            }

            code {
                font-family: "JetBrains Mono", monospace;
            }

            .banner + .hero-content {
                margin-top: 4%;
            }

            .astro-code {
                border-radius: 5px;
                padding: 20px;
                background-color: #1d1b1c !important;
                border: 1px solid var(--border-floating);
            }

            ::-webkit-scrollbar {
                width: 14px;
            }

            ::-webkit-scrollbar-track {
                background: #2f2e2e;
            }

            ::-webkit-scrollbar-thumb {
                background: #757575;
                border: 3px solid #2f2e2e;

                border-radius: 10px;
            }
        </style>
    </body>
</html>
